{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "build/main",
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "../../node_modules/@slack"
    ],
    "paths": {
      "@env/*": [
        "../../libs/env/*"
      ],
      "@logger/*": [
        "../../libs/logger/*"
      ]
    }
  },
  "references": [
    {
      "path": "../../libs/env/tsconfig.json"
    },
    {
      "path": "../../libs/logger/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ]
}